<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp">

    <ImageView
        android:id="@+id/iv"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_centerVertical="true"
        tools:background="#000000"
        tools:ignore="ContentDescription" />

    <TextView
        android:id="@+id/title_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_toStartOf="@id/chevron_iv"
        android:layout_toEndOf="@id/iv"
        android:ellipsize="end"
        android:maxLines="2"
        android:textColor="@android:color/black"
        tools:text="Supporters of the Democratic candidate" />

    <TextView
        android:id="@+id/author_name_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/title_tv"
        android:layout_marginStart="8dp"
        android:layout_toStartOf="@id/date_tv"
        android:layout_toEndOf="@id/iv"
        tools:text="Howard Johnson" />

    <TextView
        android:id="@+id/date_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/title_tv"
        android:layout_alignBottom="@id/author_name_tv"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_toStartOf="@id/chevron_iv"
        tools:text="24-10-2018" />

    <ImageView
        android:id="@+id/chevron_iv"
        android:layout_width="24dp"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/iv"
        android:layout_alignBottom="@id/iv"
        android:layout_alignParentEnd="true"
        tools:ignore="ContentDescription" />

</RelativeLayout>